<Page x:Class="EkzamenPolenov1.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EkzamenPolenov1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid Background="White">

        <StackPanel HorizontalAlignment="Left" Height="340" VerticalAlignment="Top" Width="417" Margin="169,100,0,0">
            <Label Content="Авторизация" Margin="139,5,141,0"/>
            <Label Content="Логин" Margin="0,15,317,0"/>
            <TextBox x:Name="txbLogin" Height="25" TextWrapping="Wrap" Margin="61,-25,101,0" RenderTransformOrigin="0.5,0.5"/>

            <Label Content="Пароль" Margin="0,15,317,0"/>
            <PasswordBox x:Name="psbPass" Height="25" Margin="61,-25,101,0"/>
            <Button x:Name="btnToComeIn" Content="Войти" Margin="139,10,174,0" Height="35" Click="btnToComeIn_Click"/>
        </StackPanel>

    </Grid>
</Page>
